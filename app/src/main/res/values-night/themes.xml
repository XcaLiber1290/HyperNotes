<resources>
    <!-- Base application theme -->
    <style name="Theme.HyperNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/accent_dark</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <!-- Modal dialog background color -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <!-- Set text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_light_gray</item>
        <!-- Dialog styling -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Dark</item>
    </style>
    
    <!-- Style for dialogs in dark mode -->
    <style name="ThemeOverlay.App.MaterialAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text.Dark</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text.Dark</item>
    </style>
    
    <style name="MaterialAlertDialog.App.Title.Text.Dark" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="MaterialAlertDialog.App.Body.Text.Dark" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>