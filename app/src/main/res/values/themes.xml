<resources>
    <!-- Base application theme -->
    <style name="Theme.HyperNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Modal dialog background color -->
        <item name="android:windowBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>
        <!-- Set text colors -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <!-- Dialog styling -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog.Light</item>
    </style>
    
    <!-- Style for dialogs in light mode -->
    <style name="ThemeOverlay.App.MaterialAlertDialog.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text.Light</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text.Light</item>
    </style>
    
    <style name="MaterialAlertDialog.App.Title.Text.Light" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_dark</item>
    </style>
    
    <style name="MaterialAlertDialog.App.Body.Text.Light" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_dark</item>
    </style>
</resources>